<div class="page-header">
  <h1><%= image_tag @user.photo_url, width: 70, class: "img-circle" %> <%= @user.full_name %>'s Profile</h1>
</div>

<dl class="dl-horizontal">
  <dt>First name</dt>
  <dd><%= @user.first_name %></dd>

  <dt>Last name</dt>
  <dd><%= @user.last_name %></dd>

  <dt>Home city</dt>
  <dd><%= @user.home_city %></dd>

  <dt>Home state</dt>
  <dd><%= @user.home_state %></dd>

  <dt>Home country</dt>
  <dd><%= @user.home_country %></dd>

  <dt>Email</dt>
  <dd><%= @user.email %></dd>

  <dt>User name</dt>
  <dd><%= @user.user_name %></dd>

  <dt>Password</dt>
  <dd><%= @user.password %></dd>

  <dt>Photo url</dt>
  <dd><%= @user.photo_url %>

</dl>
