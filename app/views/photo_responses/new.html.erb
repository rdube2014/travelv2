<div class="page-header">
  <h1>New Photo Response</h1>
</div>

<%= form_tag(photo_responses_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :photo_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
       <%= select_tag :photo_id, options_from_collection_for_select(Photo.all, :id, :photo_caption), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :reply_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
       <%= select_tag :reply_id, options_from_collection_for_select(Reply.all, :id, :id), class: 'form-control' %>
    </div>
  </div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Photo Response", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
  
  