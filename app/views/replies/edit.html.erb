<div class="page-header">
  <h1>Editing Your Reply </h1>
</div>

<%= form_tag(reply_url(@reply), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
       <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :full_name, @reply.user_id), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :request_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
    <%= select_tag :request_id, options_from_collection_for_select(Request.all, :id, :travel_to_city, @reply.request_id),class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :reply_text, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :reply_text, @reply.reply_text, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Reply", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
