<div class="page-header">
  <h1>Editing Photo #<%= @photo.id %></h1>
</div>

<%= form_tag(photo_url(@photo), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag "Link photo to reply #", nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
       <%= select_tag :reply_id, options_from_collection_for_select(Reply.all, :id, :id, @photo.reply_id), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :photo_url, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :photo_url, @photo.photo_url, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :photo_caption, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :photo_caption, @photo.photo_caption, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Photo", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
